---
// Sidebar component
---

<aside
  id="sidebar"
  class="bg-card border-r border-border transition-all duration-300 flex flex-col w-64"
>
  <div class="p-4 border-b border-border flex items-center justify-between">
    <div class="flex items-center gap-2" id="sidebar-brand">
      <div
        class="w-8 h-8 rounded-lg bg-primary flex items-center justify-center"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-primary-foreground"
          ><path
            d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"
          ></path></svg
        >
      </div>
      <span class="font-semibold text-foreground">MindJournal</span>
    </div>
    <button
      id="toggle-sidebar"
      class="ml-auto p-2 hover:bg-accent rounded-md transition-colors"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><line x1="4" x2="20" y1="12" y2="12"></line><line
          x1="4"
          x2="20"
          y1="6"
          y2="6"></line><line x1="4" x2="20" y1="18" y2="18"></line></svg
      >
    </button>
  </div>

  <nav class="flex-1 p-3 space-y-2">
    <a
      href="/"
      class="group w-full justify-start gap-3 px-3 py-2 rounded-xl hover:bg-accent transition-all flex items-center text-foreground font-medium"
    >
      <div
        class="w-8 h-8 rounded-lg bg-orange-500/10 flex items-center justify-center text-orange-500 group-hover:bg-orange-500 group-hover:text-white transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><rect width="7" height="9" x="3" y="3" rx="1"></rect><rect
            width="7"
            height="5"
            x="14"
            y="3"
            rx="1"></rect><rect width="7" height="9" x="14" y="12" rx="1"
          ></rect><rect width="7" height="5" x="3" y="16" rx="1"></rect></svg
        >
      </div>
      <span class="nav-label">Dashboard</span>
    </a>

    <a
      href="/journal"
      class="group w-full justify-start gap-3 px-3 py-2 rounded-xl hover:bg-accent transition-all flex items-center text-foreground font-medium"
    >
      <div
        class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center text-primary group-hover:bg-primary group-hover:text-primary-foreground transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path
            d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"
          ></path></svg
        >
      </div>
      <span class="nav-label">Diario IA</span>
    </a>

    <div class="pt-4 pb-2 px-3">
      <p
        class="text-[10px] font-bold text-muted-foreground uppercase tracking-wider nav-label"
      >
        Sistemas Futuros
      </p>
    </div>

    <div
      class="group w-full justify-start gap-3 px-3 py-2 rounded-xl flex items-center text-muted-foreground/60 cursor-not-allowed"
    >
      <div class="w-8 h-8 rounded-lg bg-muted flex items-center justify-center">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><path d="m12 19 9 2-9-18-9 18 9-2Z"></path><path d="M12 19v-7"
          ></path></svg
        >
      </div>
      <span class="nav-label">Pixar Creative</span>
    </div>

    <div
      class="group w-full justify-start gap-3 px-3 py-2 rounded-xl flex items-center text-muted-foreground/60 cursor-not-allowed"
    >
      <div class="w-8 h-8 rounded-lg bg-muted flex items-center justify-center">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          ><circle cx="12" cy="12" r="10"></circle><path d="m16 10-4 4-4-4"
          ></path></svg
        >
      </div>
      <span class="nav-label">Decisiones</span>
    </div>
  </nav>

  <div class="p-4 border-t border-border">
    <div class="flex items-center gap-3" id="sidebar-user">
      <div
        class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center"
      >
        <span class="text-sm font-medium text-primary">TU</span>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-foreground truncate">Tu Nombre</p>
        <p class="text-xs text-muted-foreground">Plan Personal</p>
      </div>
    </div>
  </div>
</aside>

<script>
  const sidebar = document.getElementById("sidebar");
  const toggleBtn = document.getElementById("toggle-sidebar");
  const brand = document.getElementById("sidebar-brand");
  const user = document.getElementById("sidebar-user");
  const labels = document.querySelectorAll(".nav-label");

  toggleBtn?.addEventListener("click", () => {
    const isCollapsed = sidebar?.classList.contains("w-16");

    if (isCollapsed) {
      sidebar?.classList.remove("w-16");
      sidebar?.classList.add("w-64");
      brand?.classList.remove("hidden");
      user?.classList.remove("justify-center");
      user?.querySelector(".flex-1")?.classList.remove("hidden");
      labels.forEach((label) => label.classList.remove("hidden"));
    } else {
      sidebar?.classList.remove("w-64");
      sidebar?.classList.add("w-16");
      brand?.classList.add("hidden");
      user?.classList.add("justify-center");
      user?.querySelector(".flex-1")?.classList.add("hidden");
      labels.forEach((label) => label.classList.add("hidden"));
    }
  });
</script>

<style>
  button {
    cursor: pointer;
    border: none;
    background: transparent;
  }
</style>
