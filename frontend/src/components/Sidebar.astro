---
// Sidebar component
---

<aside 
  id="sidebar"
  class="bg-card border-r border-border transition-all duration-300 flex flex-col w-64"
>
  <div class="p-4 border-b border-border flex items-center justify-between">
    <div class="flex items-center gap-2" id="sidebar-brand">
      <div class="w-8 h-8 rounded-lg bg-primary flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary-foreground"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>
      </div>
      <span class="font-semibold text-foreground">MindJournal</span>
    </div>
    <button id="toggle-sidebar" class="ml-auto p-2 hover:bg-accent rounded-md transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>
    </button>
  </div>

  <nav class="flex-1 p-3 space-y-1">
    <button class="w-full justify-start gap-3 px-3 py-2 rounded-md bg-secondary text-secondary-foreground flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>
      <span class="nav-label">Diario</span>
    </button>
    <button class="w-full justify-start gap-3 px-3 py-2 rounded-md hover:bg-accent transition-colors flex items-center text-foreground">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
      <span class="nav-label">Chat IA</span>
    </button>
    <button class="w-full justify-start gap-3 px-3 py-2 rounded-md hover:bg-accent transition-colors flex items-center text-foreground">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 3v18h18"/><path d="m19 9-5 5-4-4-3 3"/></svg>
      <span class="nav-label">Insights</span>
    </button>
    <button class="w-full justify-start gap-3 px-3 py-2 rounded-md hover:bg-accent transition-colors flex items-center text-foreground">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 5a3 3 0 1 0-5.997.125 4 4 0 0 0-2.526 5.77 4 4 0 0 0 .556 6.588A4 4 0 1 0 12 18Z"/><path d="M12 5a3 3 0 1 1 5.997.125 4 4 0 0 1 2.526 5.77 4 4 0 0 1-.556 6.588A4 4 0 1 1 12 18Z"/><path d="M15 13a4.5 4.5 0 0 1-3-4 4.5 4.5 0 0 1-3 4"/><path d="M17.599 6.5a3 3 0 0 0 .399-1.375"/><path d="M6.003 5.125A3 3 0 0 0 6.401 6.5"/><path d="M3.477 10.896a4 4 0 0 1 .585-.396"/><path d="M19.938 10.5a4 4 0 0 1 .585.396"/><path d="M6 18a4 4 0 0 1-1.967-.516"/><path d="M19.967 17.484A4 4 0 0 1 18 18"/></svg>
      <span class="nav-label">Patrones</span>
    </button>
    <button class="w-full justify-start gap-3 px-3 py-2 rounded-md hover:bg-accent transition-colors flex items-center text-foreground">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/><circle cx="12" cy="12" r="3"/></svg>
      <span class="nav-label">Ajustes</span>
    </button>
  </nav>

  <div class="p-4 border-t border-border">
    <div class="flex items-center gap-3" id="sidebar-user">
      <div class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center">
        <span class="text-sm font-medium text-primary">TU</span>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-foreground truncate">Tu Nombre</p>
        <p class="text-xs text-muted-foreground">Plan Personal</p>
      </div>
    </div>
  </div>
</aside>

<script>
  const sidebar = document.getElementById('sidebar');
  const toggleBtn = document.getElementById('toggle-sidebar');
  const brand = document.getElementById('sidebar-brand');
  const user = document.getElementById('sidebar-user');
  const labels = document.querySelectorAll('.nav-label');

  toggleBtn?.addEventListener('click', () => {
    const isCollapsed = sidebar?.classList.contains('w-16');
    
    if (isCollapsed) {
      sidebar?.classList.remove('w-16');
      sidebar?.classList.add('w-64');
      brand?.classList.remove('hidden');
      user?.classList.remove('justify-center');
      user?.querySelector('.flex-1')?.classList.remove('hidden');
      labels.forEach(label => label.classList.remove('hidden'));
    } else {
      sidebar?.classList.remove('w-64');
      sidebar?.classList.add('w-16');
      brand?.classList.add('hidden');
      user?.classList.add('justify-center');
      user?.querySelector('.flex-1')?.classList.add('hidden');
      labels.forEach(label => label.classList.add('hidden'));
    }
  });
</script>

<style>
  button {
    cursor: pointer;
    border: none;
    background: transparent;
  }
</style>